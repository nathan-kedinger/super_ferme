{% extends 'base.html.twig' %}

{% block title %}Liste des Newsletters{% endblock %}

{% block content %}
    
    <h1> Liste des Newsletters</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id}}</td>
                <td>{{ newsletter.name}}</td>
                <td>{{ newsletter.createdAt|date}}</td>
                <td>
                    {% if newsletter.isSend == false %}
                        <a href="">Envoyer</a>
                    {% endif %}
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}